<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical"
	android:paddingStart="@dimen/container_warning_dialog_padding_start"
	android:paddingEnd="@dimen/container_warning_dialog_padding_end">

	<TextView
		android:id="@+id/tv_title"
		style="@style/DialogTitleTheme"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/title_warning_dialog_margin_top"
		tools:text="Title" />

	<TextView
		android:id="@+id/tv_msg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:text="Lorem ipsum dolor sato sit amet. Lorem ipsum dolor sato sit amet. Lorem ipsum dolor sato sit amet." />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dimen_28dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_neutral_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="@dimen/dimen_8dp"
			android:minWidth="80dp"
			android:paddingStart="@dimen/dimen_12dp"
			android:paddingTop="@dimen/dimen_6dp"
			android:paddingEnd="@dimen/dimen_12dp"
			android:paddingBottom="@dimen/dimen_6dp"
			android:textAlignment="center"
			android:textAllCaps="true"
			android:textColor="@color/btn_text_color"
			android:textSize="@dimen/text_18sp"
			android:textStyle="bold"
			tools:text="neutral" />

		<TextView
			android:id="@+id/tv_positive_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/dimen_8dp"
			android:layout_marginBottom="@dimen/dimen_8dp"
			android:minWidth="80dp"
			android:paddingStart="@dimen/dimen_12dp"
			android:paddingTop="@dimen/dimen_6dp"
			android:paddingEnd="@dimen/dimen_12dp"
			android:paddingBottom="@dimen/dimen_6dp"
			android:textAlignment="center"
			android:textAllCaps="true"
			android:textColor="@color/btn_text_color"
			android:textSize="@dimen/text_18sp"
			android:textStyle="bold"
			android:visibility="gone"
			tools:text="positive" />

		<TextView
			android:id="@+id/tv_negative_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="@dimen/dimen_8dp"
			android:minWidth="80dp"
			android:paddingStart="@dimen/dimen_12dp"
			android:paddingTop="@dimen/dimen_6dp"
			android:paddingEnd="@dimen/dimen_12dp"
			android:paddingBottom="@dimen/dimen_6dp"
			android:textAlignment="center"
			android:textAllCaps="true"
			android:textColor="@color/btn_text_color"
			android:textSize="@dimen/text_18sp"
			android:textStyle="bold"
			android:visibility="gone"
			tools:text="negative" />
	</LinearLayout>
</LinearLayout>