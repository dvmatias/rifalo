<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dimen_20dp"
		android:textSize="@dimen/text_14sp" />

	<android.support.v7.widget.CardView
		android:id="@+id/cv"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_sign_in_components_height"
		android:layout_margin="@dimen/dimen_4dp"
		app:cardBackgroundColor="@color/color_title_error_edit_text_card_view_bgr"
		app:cardCornerRadius="@dimen/dimen_sign_in_components_corner_radius"
		app:cardElevation="@dimen/dimen_1dp"
		app:cardUseCompatPadding="false">

		<View
			android:id="@+id/v_bgr"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/et"
			style="@style/ThemeTitleErrorEditText"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/tv_error"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/dimen_20dp"
		android:textAlignment="textEnd"
		android:textColor="@color/color_title_error_edit_text_error"
		android:textSize="@dimen/text_14sp" />

</LinearLayout>