<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground"
	app:cardBackgroundColor="@color/color_facebook"
	app:cardCornerRadius="@dimen/dimen_4dp"
	app:cardElevation="@dimen/dimen_2dp"
	app:contentPaddingBottom="@dimen/dimen_6dp"
	app:contentPaddingTop="@dimen/dimen_6dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/color_transparent">

		<ImageView
			android:id="@+id/iv_btn_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/dimen_24dp"
			android:contentDescription="@null"
			android:src="@drawable/ic_sign_in_btn_facebook_36dp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/dimen_12dp"
			android:layout_toEndOf="@id/iv_btn_logo"
			android:textColor="@color/color_white"
			android:text="@string/title_sign_in_facebook_btn"
			android:textSize="@dimen/text_18sp"
			android:textStyle="bold" />
	</RelativeLayout>
</android.support.v7.widget.CardView>