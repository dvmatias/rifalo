<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dimen_20dp"
		android:text="Title"
		android:textSize="@dimen/text_18sp" />

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_sign_ing_components_height"
		android:layout_margin="@dimen/dimen_4dp"
		android:background="@drawable/bgr_sign_in_activity_edit_text"
		app:cardBackgroundColor="@color/color_custom_view_card_view_bgr"
		app:cardCornerRadius="@dimen/dimen_sign_ing_components_corner_radius"
		app:cardElevation="@dimen/dimen_2dp">

		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/et_user_input"
			style="@style/EditTextLoginRegisterTheme"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/tv_error"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/dimen_20dp"
		android:text="Error"
		android:textAlignment="textEnd"
		android:textSize="@dimen/text_14sp"
		android:textColor="@color/color_custom_view_edit_text_error"/>

</LinearLayout>