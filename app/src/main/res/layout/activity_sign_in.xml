<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bgr_sign_in_activity"
	tools:context=".screens.singin.SignInActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/color_transparent"
		android:orientation="vertical">

		<!-- App Name -->
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@integer/integer_one"
			android:padding="@dimen/dimen_22dp">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_sign_ing_components_height"
				android:layout_gravity="bottom"
				android:adjustViewBounds="true"
				android:contentDescription="@null"
				android:scaleType="center"
				android:src="@drawable/img_sign_in_app_name" />
		</FrameLayout>

		<!-- Container - Custom Sign In -->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="@dimen/dimen_28dp"
			android:paddingEnd="@dimen/dimen_28dp">

			<!-- User Name Input -->
			<EditText
				android:id="@+id/et_user_name"
				style="@style/EditTextLoginTheme"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_sign_ing_components_height"
				android:hint="@string/hint_sign_in_username"
				android:inputType="textPersonName"
				tools:ignore="Autofill" />

			<!-- User Password Input -->
			<EditText
				android:id="@+id/et_user_password"
				style="@style/EditTextLoginTheme"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_sign_ing_components_height"
				android:layout_below="@id/et_user_name"
				android:layout_marginTop="@dimen/dimen_14dp"
				android:hint="@string/hint_sign_in_password"
				android:inputType="textPassword"
				tools:ignore="Autofill" />

			<!-- Get Help Button -->
			<TextView
				android:id="@+id/tv_get_help"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/et_user_password"
				android:layout_marginTop="@dimen/dimen_10dp"
				android:layout_marginBottom="@dimen/dimen_26dp"
				android:padding="@dimen/dimen_4dp"
				android:text="@string/text_sign_in_activity_get_help"
				android:textAlignment="center"
				android:textColor="@color/color_white"
				android:textSize="@dimen/text_14sp" />

			<!-- Login Button -->
			<include
				android:id="@+id/btn_login"
				layout="@layout/view_login_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/tv_get_help" />
		</RelativeLayout>

		<!-- "OR" Separator -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/dimen_36dp"
			android:layout_marginTop="@dimen/dimen_16dp"
			android:layout_marginEnd="@dimen/dimen_36dp"
			android:layout_marginBottom="@dimen/dimen_16dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<View
				android:layout_width="0dp"
				android:layout_height="@dimen/dimen_1dp"
				android:layout_weight="@integer/integer_one"
				android:background="@color/color_white" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/dimen_10dp"
				android:paddingEnd="@dimen/dimen_10dp"
				android:text="@string/text_sign_in_activity_or"
				android:textColor="@color/color_white"
				android:textSize="@dimen/text_14sp"
				android:textStyle="bold" />

			<View
				android:layout_width="0dp"
				android:layout_height="@dimen/dimen_1dp"
				android:layout_weight="@integer/integer_one"
				android:background="@color/color_white" />
		</LinearLayout>

		<!-- Container - Google and Facebook Buttons -->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="@dimen/dimen_28dp"
			android:paddingEnd="@dimen/dimen_28dp">

			<!-- Facebook Sign In Button -->
			<include
				android:id="@+id/btn_sign_in_facebook"
				layout="@layout/view_sign_in_facebook_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true" />

			<!-- Google Sign In Button -->
			<include
				android:id="@+id/btn_sign_in_google"
				layout="@layout/view_sign_in_google_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/btn_sign_in_facebook" />
		</RelativeLayout>

		<!-- Void (Transparent view to maintain separation according main parent height) -->
		<View
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.20" />

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_1dp"
			android:background="@color/color_white" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bgr_sign_up_btn_sign_in_activity"
			android:padding="@dimen/dimen_16dp"
			android:text="@string/text_sign_in_activity_sign_up"
			android:textAlignment="center"
			android:textColor="@color/color_white"
			android:textSize="@dimen/text_14sp" />
	</LinearLayout>
</android.support.constraint.ConstraintLayout>