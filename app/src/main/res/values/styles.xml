<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorAccent">@color/color_accent</item>
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
	</style>

	<style name="SelectableItemTheme">
		<item name="colorControlHighlight">#E2E2E2</item>
	</style>

	<style name="SelectableItemBackground">
		<item name="android:theme">@style/SelectableItemTheme</item>
		<item name="android:background">?attr/selectableItemBackground</item>
	</style>

	<!-- Activity Splash Theme. -->
	<style name="ActivitySplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:statusBarColor">@color/color_transparent</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<!-- Activity Sign In Theme. -->
	<style name="ActivitySignInTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:statusBarColor">@color/color_transparent</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<!-- Activity Sign Up Theme. -->
	<style name="ActivitySignUpTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:statusBarColor">@color/color_transparent</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<!-- Edit Text Login Theme. -->
	<style name="EditTextLoginTheme" parent="Base.V7.Widget.AppCompat.EditText">
		<item name="android:background">@drawable/bgr_title_error_edit_text_normal</item>
		<item name="android:colorControlActivated">@color/color_transparent</item>
		<item name="android:colorControlNormal">@color/color_transparent</item>
		<item name="android:layout_marginStart">@dimen/dimen_8dp</item>
		<item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
		<item name="android:maxLength">25</item>
		<item name="android:paddingEnd">@dimen/dimen_16dp</item>
		<item name="android:paddingStart">@dimen/dimen_16dp</item>
		<item name="android:textColor">@color/color_white</item>
		<item name="android:textColorHint">@color/color_sign_in_edit_text_hint</item>
	</style>

	<!-- Edit Text Sign Up Theme. -->
	<style name="ThemeTitleErrorEditText" parent="Base.V7.Widget.AppCompat.EditText">
		<item name="android:background">@drawable/shape_custom_view_edit_text_bgr</item>
		<item name="android:colorControlActivated">@color/color_transparent</item>
		<item name="android:colorControlNormal">@color/color_transparent</item>
		<item name="android:maxLength">30</item>
		<item name="android:paddingEnd">@dimen/dimen_16dp</item>
		<item name="android:paddingStart">@dimen/dimen_16dp</item>
		<item name="android:textColorHint">@color/color_title_error_edit_text_hint</item>
		<item name="android:textCursorDrawable">@drawable/shape_title_error_edit_text_cursor_drawable</item>
	</style>

	<!-- Edit Text Phone Validator Theme. -->
	<style name="EditTextPhoneValidator" parent="Base.V7.Widget.AppCompat.EditText">
		<item name="android:background">@drawable/shape_custom_view_edit_text_bgr</item>
		<item name="android:colorControlActivated">@color/color_transparent</item>
		<item name="android:colorControlNormal">@color/color_transparent</item>
		<item name="android:maxLength">13</item>
		<item name="android:paddingEnd">@dimen/dimen_16dp</item>
		<item name="android:paddingStart">@dimen/dimen_12dp</item>
		<item name="android:textColorHint">@color/color_title_error_edit_text_hint</item>
		<item name="android:textAlignment">center</item>
		<item name="android:inputType">number</item>
	</style>

	<!-- Dialog Title -->
	<style name="DialogTitleTheme" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
		<item name="android:lines">@integer/integer_one</item>
		<item name="android:textSize">@dimen/text_22sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">@dimen/dimen_16dp</item>
	</style>

</resources>
